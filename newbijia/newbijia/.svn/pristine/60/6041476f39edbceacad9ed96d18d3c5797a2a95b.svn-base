<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mipatch"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_content"
            android:layout_alignRight="@+id/iv_content"
            android:layout_below="@+id/iv_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="蓝凌万岁蓝凌万岁蓝凌万岁" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_content"
            android:layout_below="@+id/tv_content"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:text="￥36"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_daili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_content"
            android:layout_below="@+id/tv_content"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:text="30粒/袋" />
    </RelativeLayout>

</RelativeLayout>