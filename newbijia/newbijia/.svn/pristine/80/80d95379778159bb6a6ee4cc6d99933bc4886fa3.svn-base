<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/tv_super_dad_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:background="@drawable/add_hao" />

        <TextView
            android:id="@+id/tv_super_dad_item_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_super_dad_item_icon"
            android:text="小宝"
            android:textColor="#E0308F"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_super_dad_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="删除"
            android:textColor="#27A6E3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_super_dad_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/tv_super_dad_item_delete"
            android:text="1分钟前"
            android:textColor="#3CAE55"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/layout_super_dad_context"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_super_dad_item_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_super_dad_item_icon"
            android:background="@drawable/quanzi_onebg" >

            <TextView
                android:id="@+id/tv_super_dad_item_context"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="今晚有一起去吃饭的么，龙虾盛宴、小伙伴们快来找我吧、走起！！~"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_super_dad_list_item_pic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_super_dad_item_context"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_popup_pinglun"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/layout_super_dad_context" >

            <ImageView
                android:id="@+id/layout_super_dad_popup_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/red_tou" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_super_dad_context"
            android:layout_below="@+id/layout_popup_pinglun"
            android:layout_marginRight="15dp"
            android:background="@drawable/quanzitwobg" >

            <RelativeLayout
                android:id="@+id/layout_super_dad_zan"
                android:layout_width="fill_parent"
                android:layout_height="30dp" >

                <ImageView
                    android:id="@+id/iv_super_dad_item_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:src="@drawable/red_tou" />

                <TextView
                    android:id="@+id/tv_super_dad_item_zan_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_super_dad_item_zan"
                    android:text="12"
                    android:textSize="15sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#C8C7CC" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_super_dad_review"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_super_dad_zan"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>