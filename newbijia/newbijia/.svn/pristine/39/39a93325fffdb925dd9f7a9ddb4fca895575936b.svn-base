<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<include 
   android:id="@+id/searcID"
    layout="@layout/stub_title"
    />
 <RelativeLayout 
     android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:layout_below="@id/searcID"
    android:background="#cccccc"
    android:id="@+id/sercIdd"
    >
    
    <EditText 
        android:hint="请输入关键字"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/fangda_jing_biank"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
         android:paddingLeft="35dp"
        />
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/sousuo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:text="搜索"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />
</RelativeLayout>

 <ListView 
     android:id="@+id/srcSelfPONNTid"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:layout_below="@id/sercIdd"
     android:divider="@null"
     ></ListView>

</RelativeLayout>
