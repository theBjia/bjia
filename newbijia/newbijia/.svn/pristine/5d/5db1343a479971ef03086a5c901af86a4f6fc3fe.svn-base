<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout
            android:id="@+id/rl_Show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
            android:background="#ffffff">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignRight="@+id/im_Photo"
                android:layout_centerVertical="true"
                android:background="@drawable/t13" />

            <ImageView
                android:id="@+id/im_Photo"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/t14" />

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/button1"
                android:text="进口苹果"
                android:textColor="#444444"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button1"
                android:layout_alignBottom="@+id/button1"
                android:layout_alignLeft="@+id/tv_Name"
                android:text="重量：" />

            <TextView
                android:id="@+id/tv_Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textView1"
                android:text="500g" 
                android:textColor="#cccccc"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/imageView2"
                android:text="包装：" 
                android:layout_marginTop="35dp"/>

            <TextView
                android:id="@+id/tv_Pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_toRightOf="@+id/textView1"
                android:text="托盘加保鲜膜" 
                android:layout_marginTop="35dp"
                android:textColor="#cccccc"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/to_right_back_img" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:text="￥ 100.0元" 
                android:textColor="#ff0000"
                android:layout_marginTop="2dp"/>

        </RelativeLayout>
</RelativeLayout>
