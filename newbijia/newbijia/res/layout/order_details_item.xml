<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/im_Photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/t14" />

        <TextView
            android:id="@+id/tv_CommodityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/im_Photo"
            android:layout_toRightOf="@+id/im_Photo"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="苹果" />

        <TextView
            android:id="@+id/tv_Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_Photo"
            android:layout_alignLeft="@+id/tv_CommodityName"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="重量：1.002kg"
            android:textColor="@color/text_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_Photo"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text="数量:10个"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_Photo"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/tv_Number"
            android:layout_toRightOf="@+id/tv_Weight"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="包装：包装：包装：包装：包装：包装：包装：包装包装包装"
            android:textColor="@color/text_grey"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>