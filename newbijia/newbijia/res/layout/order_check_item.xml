<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout
		    android:id="@+id/r_OrderOver"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true" 
		    android:layout_marginTop="10dp">
		
        <RelativeLayout
            android:id="@+id/rl_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >
			
            <RelativeLayout
                android:id="@+id/LinearLayout06"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
               
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="订单编号：" 
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#cccccc"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:text="下单时间：" 
                    android:layout_marginTop="5dp"
                    android:textColor="#cccccc"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text="订单金额：" 
                    android:layout_marginTop="5dp"
                    android:textColor="#cccccc"/>

                <TextView
                    android:id="@+id/tv_OrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView1"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="789456123" />

                <TextView
                    android:id="@+id/tv_OrderMoeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignLeft="@+id/tv_OrderNumber"
                    android:text="￥100.00" 
                    android:textColor="#ff3a3a"/>

                <TextView
                    android:id="@+id/tv_OrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignLeft="@+id/tv_OrderMoeny"
                    android:text="2014-06-11  10:11" />

            </RelativeLayout>

            <View
                android:id="@+id/View01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/LinearLayout06"
                android:background="#cccccc" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LinearLayout06"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rl_tt"
            android:background="#ffffff" >

            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/imageView1"
                android:layout_centerVertical="true"
                android:background="@drawable/t13" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/t14" />

            <View
                android:id="@+id/View03"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#cccccc" 
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_CommodityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/button1"
                android:text="精品小苹果  山东烟台栖霞苹果"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_CommodityName"
                android:layout_alignLeft="@+id/tv_CommodityName"
                android:text="重量:"
                android:layout_marginTop="35dp"
                android:textColor="#cccccc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView11"
                android:text="500g"
                android:textColor="#cccccc"
                android:textSize="13sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignRight="@+id/imageView1"
                android:layout_centerVertical="true"
                android:background="@drawable/t13" />

            <ImageView
                android:id="@+id/im_GoodsPicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/t14" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_Weight"
                android:layout_alignBottom="@+id/tv_Weight"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_Weight"
                android:text="包装:"
                android:textColor="#cccccc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_Pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView12"
                android:layout_alignBottom="@+id/textView12"
                android:layout_toRightOf="@+id/textView12"
                android:text="托盘加保鲜膜"
                android:textColor="#cccccc"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/to_right_back_img" />

            <View
                android:id="@+id/View02"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#cccccc" />

        </RelativeLayout>
        
          <RelativeLayout android:id="@+id/rl_19"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/LinearLayout06"
            android:background="#ffffff">
            
            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="订单状态：" 
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#cccccc"/>

            <View
                android:id="@+id/View05"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/tv_OrderStaut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:text="完成" 
                android:layout_marginLeft="10dp"
                android:textColor="#333333"/>

            <Button
                android:id="@+id/btn_UserAction"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/silver_bg"
                android:text="联系客服" 
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="#4f4c47"/>

          </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
