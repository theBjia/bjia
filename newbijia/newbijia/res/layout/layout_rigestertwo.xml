<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_theme_bean_green" >

    <include
        android:id="@+id/tiid"
        android:layout_alignParentTop="true"
        layout="@layout/stub_title" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tiid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/regin_logo" />

    <RelativeLayout
        android:id="@+id/rl_one"
        style="@style/loginViewBasic"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView10"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_white" >

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@color/login_theme_bean_green"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="发送验证码"
            android:textColor="@color/white" 
            />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        style="@style/loginViewBasic"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_one"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_white"
        >

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_four"
        style="@style/loginViewBasic"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_three"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_white" >

        <EditText
            android:id="@+id/et_sure_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="@color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_four"
        android:layout_centerHorizontal="true"
        style="@style/loginViewBasic"
        android:layout_marginTop="50dp"
        android:background="#B1DBC3"
        android:text="下一步"
        android:textColor="@color/login_theme_bean_green"
        android:textSize="18sp" />

</RelativeLayout>