<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/iv_hongti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:src="@drawable/app_cone"
            />

        <ImageView
            android:id="@+id/iv_xilanhua"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
             android:src="@drawable/app_cone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_jiliu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
             android:src="@drawable/app_cone"
            />

        <ImageView
            android:id="@+id/iv_yanmai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
             android:src="@drawable/app_cone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_xiaoxi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
             android:src="@drawable/app_cone"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_shejiao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                 android:src="@drawable/app_cone"
                />

            <ImageView
                android:id="@+id/iv_fujin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                 android:src="@drawable/app_cone"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_zhurou"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_ningmeng"
         android:src="@drawable/app_cone"
        />
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_boluo"
         android:src="@drawable/app_cone"
        />
</LinearLayout>