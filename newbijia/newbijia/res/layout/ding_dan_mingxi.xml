<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    
    
    
   <RelativeLayout 
    android:id="@+id/dingdanTypeID"
    android:layout_width="fill_parent"
    android:layout_height="58dp"
    android:background="#ffffff"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:text="进口水果"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="X1 ￥200.00元"
        android:textColor="#f48a94"
        android:textSize="12sp"
        android:id="@+id/dingdan_zitid"
        />
      
      <View 
          android:layout_marginLeft="5dp"
         android:layout_width="fill_parent" 
         android:layout_height="1dp"
         android:background="#dbdbdb"
          android:layout_alignParentBottom="true"
          />
</RelativeLayout> 
    
    
    
    
    <!--  -->
    
    
        
   <RelativeLayout 
    android:id="@+id/jutidingdanTypeID"
    android:layout_width="fill_parent"
    android:layout_height="58dp"
    android:background="#ffffff"
    android:layout_below="@id/dingdanTypeID"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:text="山东烟台栖果"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    
    <TextView 
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="重量：500g"
        android:textSize="12sp"
        ></TextView>
    
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="包装：托盘加保鲜膜"
       
        android:textSize="12sp"
        android:id="@+id/jti_dingdan_zitid"
        />
      
      <View 
         android:layout_width="fill_parent" 
         android:layout_height="1dp"
         android:background="#dbdbdb"
          android:layout_alignParentBottom="true"
          />
</RelativeLayout> 
    
    
    
    
    
    
    
    
    

</RelativeLayout>
